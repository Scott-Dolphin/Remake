{{layout "entry"}}
<script>
    document.title = "Forgot Password - Workout.Planner";
</script>
<header>
    <nav class="entrynav">
        <div class="left">
            <a href="/">Workout.Planner</a>
        </div>
        <div class="right">
            <a href="/user/login">Log in</a>
        </div>
    </nav>
</header>

<div class="entryTitle">
    <h1>Recover your password</h1>
</div>

<div class="floatbox">
    <div>
    <form action="/user/forgot" method="post">
        <label>
            <span>Username</span>
            <div class="fixed block input-wrapper">
                <input type="text" name="username" required placeholder="thesephist">
            </div>
        </label>
        <button class="accent block" type="submit">Send reset link</button>
    </form>
    </div>
    <div class="entryinfo">Enter username to begin password recovery.</div>
</div>
