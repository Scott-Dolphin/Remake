<header>
    <nav class="nav-bar">
        <div class="left">
            <a href="/">Workout.Planner</a>
            <a href="/about">About</a>
        </div>
        <div class="right">
            {{#if currentUser}}
            <a href="/user/logout">Log out</a>
            <a href="/{{currentUser.details.username}}">Your workout &rarr;</a>
            {{else}}
            <a href="/user/login">Log in</a>
            <a href="/user/signup">Sign up &rarr;</a>
            {{/if}}
        </div>
    </nav>
</header>

<div class="hero">
    <h1>Your Workout Schedule</h1>
</div>

<div class="events-page">
    <div object class="events-container">
        <ul array sortable key="workouts" class="events-list">
            {{#for workout in workouts}}
            <li object key:name="@search" key:day="@search" class="workout">
                <div class="workout-header" edit:name edit:day>
                    <h1 object target:name="@innerText">
                        {{default workout.name "Muscle Group"}}
                    </h1>
                    <h2 object target:day="@innerText">
                        {{default workout.day "Day"}}
                    </h2>
                </div>
                <div class="workout-body">
                    <div object class="exercises-container">
                        <ul array sortable key="exercises">
                            {{#for exercise in workout.exercises}}
                                <li object key:name="@search" key:sets="@search" edit:name edit:sets>
                                    <h2 object target:name="@innerText">
                                        {{default exercise.name "Bench"}}
                                    </h2>
                                    <h3 object target:sets="@innerText">
                                        {{default exercise.sets "3 Sets of 10"}}
                                    </h3>
                                </li>
                            {{/for}}
                        </ul>
                    </div>
                    <button new:exercise>Add exercise</button>
                </div>
            </li>
            {{/for}}
        </ul>
        <button new:workout>Add Workout</button>
    </div>
</div>
