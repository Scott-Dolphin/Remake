{{layout "entry"}}
<script>
    document.title="Sign Up - Weekly Planner";
</script>
<header>
    <nav class="entrynav">
        <div class="left">
            <a href="/">Weekly Planner</a>
        </div>
        <div class="right">
            <a href="/user/login">Log In</a>
        </div>
    </nav>
</header>

<div class="entryTitle">
    <h1>Sign Up</h1>
</div>

<div class="floatbox">
    <div>
        <form action="/user/signup" method="post">
            <label>
                <span>Username (Permanent)</span>
                <div class="fixed block input-wrapper">
                    <input type="text" name="username" required placeholder="username">
                </div>
            </label>
            <label>
                <span>Email</span>
                <div class="fixed block input-wrapper">
                    <input type="email" name="email" required placeholder="user@example.com">
                </div>
            </label>
            <label>
                <span>Password</span>
                <div class="fixed block input-wrapper">
                    <input type="password" name="password" required>
                </div>
            </label>
            <button class="accent block" type="submit">Sign up &rarr;</button>
        </form>
    </div>
    <div class="entryinfo">Create your own Weekly Planner Today!</div>
</div>
